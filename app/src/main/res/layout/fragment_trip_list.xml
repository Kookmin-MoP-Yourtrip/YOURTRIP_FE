<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <!-- 여행 리스트 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trip_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:paddingHorizontal="16dp"
        android:clipToPadding="false"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 플로팅 버튼 (+) -->
    <ImageView
        android:id="@+id/btn_add_trip"
        android:layout_width="82dp"
        android:layout_height="82dp"

        android:src="@drawable/ic_add_course"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"

        android:clickable="true"
        android:focusable="true"


        app:layout_constraintBottom_toTopOf="@+id/systemBarDummy"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- ✅ 미리보기 전용 하단 네비 바 크기 확보 (실행 시 무시됨) -->
    <View
        android:id="@+id/systemBarDummy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:visibility="gone"
        tools:layout_height="62dp"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>