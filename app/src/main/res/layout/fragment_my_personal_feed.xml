<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:id="@+id/topBarContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 상단 로고 -->
            <ImageView
                android:id="@+id/img_feed_topbar"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/logo"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- 상단 타이틀 -->
            <TextView
                android:id="@+id/tv_feed_topbar"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"
                android:text="나의 피드"
                android:textStyle="bold"
                android:textSize="19dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 검색창 추가 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etMyFeedSearch"
                style="@style/RoundedEditText.Default"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="내 피드에서 검색하세요!"
                android:textColorHint="@color/gray_550" />

            <ImageView
                android:id="@+id/btnMyFeedSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search"
                android:padding="8dp" />
        </RelativeLayout>

    </LinearLayout>

    <!-- 피드 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_feed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/topBarContainer"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 플로팅 버튼 (피드 추가) -->
    <ImageView
        android:id="@+id/btn_add_feed"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:src="@drawable/fab_add_course"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/systemBarDummy"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"/>

    <!-- 하단 네비 바 크기 확보 -->
    <View
        android:id="@+id/systemBarDummy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:visibility="gone"
        tools:layout_height="62dp"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>