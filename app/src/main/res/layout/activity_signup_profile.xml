<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 공통 상단바 (progress=4로 변경되야함) -->
    <include layout="@layout/view_signup_header"
        android:id="@+id/signupHeader"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로필을 설정해 주세요."
            android:textColor="@color/gray_700"
            android:textSize="20sp"
            android:layout_marginBottom="24dp" />

        <!-- 프로필 통합 이미지 -->
        <ImageView
            android:id="@+id/imgProfileField"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="프로필 이미지 선택"
            android:focusable="true"
            android:src="@drawable/img_profile_add" />


        <LinearLayout
            style="@style/RoundedEditText.Default"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_box_round"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="14dp">

            <!-- 입력창 -->
            <EditText
                android:id="@+id/edtNickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="닉네임 입력"
                android:gravity="center"
                android:inputType="text"
                android:focusable="true"
                android:paddingVertical="12dp"
                android:textColor="@color/gray_700"
                android:textSize="14sp" />

            <!-- 오른쪽 수정 아이콘 -->
            <ImageView
                android:id="@+id/iconEdit"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@color/gray_150"
                android:contentDescription="닉네임 수정"
                android:src="@drawable/ic_edit" />
        </LinearLayout>

        <!--        인증 번호 오류 메시지 표시용 TextView-->
        <TextView
            android:id="@+id/tvNicknameError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="이미 사용 중인 닉네임입니다."
            android:textColor="@color/red"
            android:textSize="10sp"
            android:visibility="gone"/> <!-- 처음엔 숨겨둠 -->

        <android.widget.Button
            android:id="@+id/btnComplete"
            style="@style/ChangeButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="완료"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>