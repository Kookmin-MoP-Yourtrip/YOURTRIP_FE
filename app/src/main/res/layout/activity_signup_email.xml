<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 공통 상단바 포함 -->
    <include
        layout="@layout/view_signup_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:text="사용할 이메일을 입력해주세요"
            android:textColor="@color/gray_700"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtEmail"
            style="@style/RoundedEditText.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            tools:layout_marginBottom="14dp"
            android:textSize="14sp"/>

<!--        이메일 오류 메시지 표시용 TextView-->
        <TextView
            android:id="@+id/tvEmailError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이미 사용 중인 이메일입니다."
            android:textColor="@color/red"
            android:textSize="10sp"
            android:visibility="gone"/> <!-- 처음엔 숨겨둠 -->

        <android.widget.Button
            android:id="@+id/btnNext"
            style="@style/ChangeButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="다음"
            android:textSize="14sp"/>

    </LinearLayout>




</LinearLayout>
