<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단바 (제목은 코드에서 "AI 코스 만들기"로 세팅), progress indicator 필요 -->
    <include
        android:id="@+id/topBar"
        layout="@layout/view_common_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 전체 콘텐츠 영역 -->
    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:id="@+id/block_date"
            style="@style/FormBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp">

            <!-- 안내 문구 -->
            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행 기간을 입력해 주세요."
                android:textSize="20sp"
                android:textColor="@color/gray_700"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="12dp" />

            <!-- 서브 설명 -->
            <TextView
                android:id="@+id/tvSubInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조건을 바탕으로 AI가 여행 코스를 생성해요."
                android:textSize="13sp"
                android:textColor="@color/gray_550"
                android:layout_marginBottom="24dp" />


            <!-- BLOCK 3: 여행 날짜 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/btnStartDate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    style="@style/RoundedEditText.Default"
                    android:hint="여행 출발 날짜"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:focusable="false"
                    android:clickable="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  ~  "
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/btnEndDate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    style="@style/RoundedEditText.Default"
                    android:hint="여행 종료 날짜"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:focusable="false"
                    android:clickable="true"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- 다음 버튼 (하단 고정) -->
    <android.widget.Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        style="@style/ChangeButtonStyle"
        android:layout_margin="30dp"
        android:text="다음"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>