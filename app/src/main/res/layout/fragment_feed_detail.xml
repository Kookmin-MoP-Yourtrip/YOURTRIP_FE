<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- â–£ (1) ìŠ¤ì¼ˆë ˆí†¤ ë¡œë”© í™”ë©´ -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loadingLayout_feed_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_auto_start="true"
        android:visibility="visible">

        <include layout="@layout/layout_feed_detail_loading"/>

    </com.facebook.shimmer.ShimmerFrameLayout>


    <!-- â–£ (2) ì‹¤ì œ ì½˜í…ì¸  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayout_feed_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- ê¸°ì¡´ ë‚´ìš© ì „ì²´ë¥¼ í†µì§¸ë¡œ ì—¬ê¸°ì— ë„£ê¸° -->
        <!-- ðŸ”½ðŸ”½ðŸ”½ ë„ˆê°€ ë³´ë‚¸ ì „ì²´ ë‚´ìš©ì´ ì—¬ê¸°ë¡œ ë“¤ì–´ê°„ë‹¤ ðŸ”½ðŸ”½ðŸ”½ -->


        <!-- â–£ ìƒë‹¨ë°” -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="í”¼ë“œ ìžì„¸ížˆ ë³´ê¸°"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/gray_700"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- â–£ ì „ì²´ìŠ¤í¬ë¡¤ -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- â–£ ì‚¬ì§„ë“¤ -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_photos"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginHorizontal="8dp"
                    android:overScrollMode="never"/>

                <!-- â–£ í”„ë¡œí•„ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/ic_default_profile"
                        android:background="@drawable/bg_circle"
                        android:clipToOutline="true"/>

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="ì‚¬ìš©ìžë‹‰ë„¤ìž„"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/gray_700"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="2dp">

                        <ImageView
                            android:id="@+id/btn_like"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_heart_default"
                            android:layout_marginEnd="8dp"/>

                        <ImageView
                            android:id="@+id/btn_chat"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_chat" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ìº¡ì…˜ -->
                <TextView
                    android:id="@+id/tv_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_box_round"
                    android:backgroundTint="@color/gray_100"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"

                    android:text="ì—¬ê¸°ì— í”¼ë“œ ë‚´ìš©ì´ ë“¤ì–´ì˜µë‹ˆë‹¤"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp" />

                <!-- â–£ ìž¥ì†Œ -->
                <LinearLayout
                    android:layout_margin="16dp"
                    android:id="@+id/tag_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_tag"
                    android:backgroundTint="@color/tag_skyblue"
                    android:clipToPadding="false">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="1dp"
                        android:src="@drawable/ic_location"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="ì§€ì—­ëª…"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- ðŸ”¼ðŸ”¼ðŸ”¼ ì—¬ê¸°ê¹Œì§€ ê¸°ì¡´ ë‚´ìš© ê·¸ëŒ€ë¡œ ì˜®ê²¨ì˜´ ðŸ”¼ðŸ”¼ðŸ”¼ -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

