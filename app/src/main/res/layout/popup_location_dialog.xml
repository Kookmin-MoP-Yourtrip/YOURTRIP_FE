<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="270dp"
    android:layout_height="208dp"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_box_round_12dp_white">

    <!-- 다이얼로그 메시지 -->
    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="16dp"
        android:text="등록되지 않은 주소예요. \n이대로 추가할까요?"
        android:textColor="@color/gray_700"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- 버튼 -->

    <android.widget.Button
        android:id="@+id/btnAdd"
        android:layout_width="230dp"
        android:layout_height="38dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/bg_box_border_12dp"
        android:text="이대로 추가하기"
        android:textSize="12sp" />

    <android.widget.Button
        android:id="@+id/btnSearchAgain"
        android:layout_width="230dp"
        android:layout_height="38dp"
        android:background="@drawable/bg_box_border_12dp"
        android:text="다시 검색하기"
        android:textSize="12sp" />
</LinearLayout>
