<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    android:fitsSystemWindows="true"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="?attr/actionBarSize"> <!-- ✅ 상단바 + 하단바 높이만큼 자동 여백 확보 -->
    <!-- 피드 텍스트 -->
    <TextView
        android:id="@+id/tvFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="피드 화면"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <!-- ✅ (1) 입력 전 - 회색 배경 -->
    <!-- ✅ (2) 입력 후 - 값이 들어간 상태로 변경될것 -->
    <EditText
        android:id="@+id/editDynamic"
        style="@style/RoundedEditText.Default"

        android:hint="아이디"

        app:layout_constraintTop_toBottomOf="@id/tvFeed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp" />

    <!-- ✅ (2) 파란 테두리 입력창 (예: 이메일 표시용) -->
    <EditText
        android:id="@+id/tvBorder"
        style="@style/RoundedTextBox.OutlineBlue"

        android:text="dawon@naver.com"

        app:layout_constraintTop_toBottomOf="@id/editDynamic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp" />

    <!-- ✅ (3) 파란 테두리 버튼 -->
    <android.widget.Button
        android:id="@+id/btnOutline"
        style="@style/RoundedButton.OutlineBlue"

        android:text="로그인 없이 둘러보기"

        app:layout_constraintTop_toBottomOf="@id/tvBorder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp" />

    <!--  공통 그라데이션 버튼 -->
    <android.widget.Button
        android:id="@+id/btnNext"
        style="@style/ChangeButtonStyle"

        android:text="다음"

        app:layout_constraintTop_toBottomOf="@id/btnOutline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>