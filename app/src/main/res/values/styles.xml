<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoIndicator">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:alpha">0</item>
    </style>

    <style name="CommonButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_common_btn</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>


</resources>
