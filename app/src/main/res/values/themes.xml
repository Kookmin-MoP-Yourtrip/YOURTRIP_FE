    <!-- Base application theme. -->
    <style name="Base.Theme.MyAppTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:background">@color/white</item>
    </style>

    <!--  스플래시 화면 전용 테마 -->
