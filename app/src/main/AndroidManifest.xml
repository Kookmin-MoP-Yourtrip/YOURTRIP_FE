<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.yourtrip">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:name=".YourTripApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/yourtrip_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.MyAppTest"
        android:usesCleartextTraffic="true">
        <!-- <meta-data -->
        <!-- android:name="com.google.android.geo.API_KEY" -->
        <!-- android:value="YOUR_API_KEY" /> -->
        <!-- 네이버 map api 발급 -->
        <meta-data
            android:name="com.naver.maps.map.ncpClientID"
            android:value="lm7f1yckad" /> <!-- 앱 실행 시 제일 먼저 실행될 Activity -->
        <activity
            android:name=".LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.YourTrip.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 회원가입 및 로그인 -->
        <activity android:name=".auth.LoginActivity" />
        <activity
            android:name=".auth.SignupCompleteActivity"
            android:exported="false" />
        <activity
            android:name=".auth.SignupVerificationActivity"
            android:exported="false" />
        <activity
            android:name=".auth.SignupProfileActivity"
            android:exported="false" />
        <activity
            android:name=".auth.SignupPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".auth.SignupEmailActivity"
            android:exported="false" /> <!-- 메인 화면 -->
        <activity android:name=".MainActivity" /> <!-- 나의 여행 -->
        <activity
            android:name=".mytrip.create_direct.CreateCourseBasicActivity"
            android:exported="false" />
        <activity android:name=".mytrip.create_direct.CreateCourseDetailActivity" />
        <activity android:name=".mytrip.create_direct.AddLocationActivity" />
        <activity
            android:name=".mytrip.create_ai.CreateAICourseDateActivity"
            android:exported="false" />
        <activity
            android:name=".mytrip.create_ai.CreateAICourseLocationActivity"
            android:exported="false" />
        <activity
            android:name=".mytrip.create_ai.CreateAICourseTagsActivity"
            android:exported="false" />
        <activity
            android:name=".mytrip.upload.UploadCourseTagsActivity"
            android:exported="false" />
        <activity
            android:name=".mytrip.upload.UploadCourseInfoActivity"
            android:exported="false" />

        <activity android:name=".mytrip.upload.UploadCourseConfirmActivity"
            android:exported="false" />

    </application>

</manifest>